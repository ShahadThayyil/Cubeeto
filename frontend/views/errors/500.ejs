<div class="min-h-screen flex items-center justify-center">
  <div class="text-center">
    <div class="text-9xl font-bold text-gray-200 mb-4">500</div>
    <h1 class="text-4xl font-bold mb-4">Server Error</h1>
    <p class="text-gray-600 mb-8">Something went wrong on our end. Please try again later.</p>
    <a href="/" class="btn btn-primary">
      <i class="fas fa-home mr-2"></i> Back to Home
    </a>
    
    <% if (process.env.NODE_ENV === 'development' && error) { %>
      <div class="mt-8 p-4 bg-gray-100 rounded-lg text-left">
        <h3 class="text-lg font-bold mb-2">Error Details (Development Only):</h3>
        <pre class="text-sm text-red-600 overflow-auto p-2"><%= JSON.stringify(error, null, 2) %></pre>
      </div>
    <% } %>
  </div>
</div>