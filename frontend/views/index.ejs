<script>
  document.querySelectorAll('.animate-fade-up')
    .forEach(el => {
      new IntersectionObserver(entries => {
        entries.forEach(e => {
          if (e.isIntersecting) e.target.classList.add('visible');
        });
      }, { threshold: 0.2 }).observe(el);
    });
</script>