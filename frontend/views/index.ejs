<% const sections = [
  { title: 'Marketplace', path: '/marketplace', products: latestMarketplaceProducts, color: 'blue', priceSuffix: '' },
  { title: 'Renting', path: '/renting', products: latestRentingProducts, color: 'orange', priceSuffix: '/day' }
]; %>
<!-- marketplace and rentel -->
<% sections.forEach(section => { %>
<section class="mb-16 px-4 animate-on-scroll py-14  ">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-semibold "><%= section.title %></h2>
    <a href="<%= section.path %>" class="text-<%= section.color %>-600 hover:underline flex items-center">
      View All <i class="fas fa-arrow-right ml-2"></i>
    </a>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 ">
    <% if (section.products && section.products.length > 0) { %>
      <% section.products.forEach(product => { %>
        <a href="/marketplace/details/<%= product._id %>" class="group rounded-xl bg-white shadow-md overflow-hidden hover:shadow-xl transition hover:scale-105">
          <div class="relative w-full h-48 sm:h-56 md:h-64 lg:h-48 xl:h-56 justify-center flex ">
  <img 
    src="<%= product.thumbnail %>" 
    alt="<%= product.name %>" 
    class=" w-52 h-52 sm:h-full object-cover "
    loading="lazy"
  >
  
  <span class="absolute top-2 right-2 bg-<%= section.color %>-600 text-white bg-blue-600 px-3 py-1 text-sm rounded-full shadow">
    â‚¹<%= product.price %><%= section.priceSuffix %>
  </span>
</div>
          <div class="p-4 space-y-2">
            <h3 class="text-lg font-medium truncate"><%= product.name %></h3>
            <p class="text-sm text-gray-500"><i class="fas fa-map-marker-alt mr-1"></i><%= product.place %></p>
            <span class="inline-block bg-<%= section.color %>-100 text-<%= section.color %>-800 text-xs px-2 py-1 rounded">
              <%= product.category %>
            </span>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <div class="col-span-4 text-center text-gray-500 py-8">
        <p>No <%= section.title.toLowerCase() %> products available yet.</p>
      </div>
    <% } %>
  </div>
</section>
<% }) %>



<!-- NoteBank Section -->
<section class="mb-16 px-4 animate-on-scroll">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-semibold">NoteBank</h2>
    <a href="/notebank" class="text-blue-600 hover:underline flex items-center">
      View All <i class="fas fa-arrow-right ml-2"></i>
    </a>
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
    <% if (popularNotes && popularNotes.length > 0) { %>
      <% popularNotes.forEach(note => { %>
        <div class="rounded-xl bg-white shadow-md hover:shadow-xl transition overflow-hidden">
          <div class="p-6 space-y-4">
            <div class="flex justify-center">
              <i class="fas fa-file-pdf text-red-500 text-4xl"></i>
            </div>
            <h3 class="text-lg font-medium text-center truncate"><%= note.name %></h3>
            <div class="text-center space-y-1">
              <span class="bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded"><%= note.subject %></span>
              <p class="text-sm text-gray-600"><%= note.course %> - <%= note.semester %></p>
            </div>
            <div class="flex justify-between items-center text-sm text-gray-500">
              <span><i class="fas fa-download mr-1"></i><%= note.downloadCount %> downloads</span>
              <a href="/notebank/download/<%= note._id %>" class="btn btn-primary px-3 py-1 text-sm">Download</a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="col-span-4 text-center text-gray-500 py-8">
        <p>No notes available yet.</p>
      </div>
    <% } %>
  </div>
</section>

