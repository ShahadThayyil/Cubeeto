<div class="mb-8 px-4 pt-4">
  <h1 class="text-3xl font-bold mb-4">Upload Notes</h1>
  <p class="text-gray-600">Share your educational resources with others</p>
</div>

<div class="bg-white rounded-lg shadow-md p-6 mx-2 mb-4">
  <form action="/notebank/upload" method="POST" enctype="multipart/form-data" data-validate="true">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <label for="name" class="form-label">Note Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'name')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'name').msg %></p>
        <% } %>
      </div>
      
      <div>
        <label for="subject" class="form-label">Subject</label>
        <input 
          type="text" 
          id="subject" 
          name="subject" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.subject : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'subject')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'subject').msg %></p>
        <% } %>
      </div>
      
      <div>
        <label for="course" class="form-label">Course</label>
        <input 
          type="text" 
          id="course" 
          name="course" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.course : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'course')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'course').msg %></p>
        <% } %>
      </div>
      
      <div>
        <label for="college" class="form-label">College</label>
        <input 
          type="text" 
          id="college" 
          name="college" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.college : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'college')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'college').msg %></p>
        <% } %>
      </div>
      
      <div>
        <label for="stream" class="form-label">Stream</label>
        <input 
          type="text" 
          id="stream" 
          name="stream" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.stream : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'stream')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'stream').msg %></p>
        <% } %>
      </div>
      
      <div>
        <label for="semester" class="form-label">Semester</label>
        <input 
          type="text" 
          id="semester" 
          name="semester" 
          class="form-input p-3 border" 
          value="<%= typeof formData !== 'undefined' ? formData.semester : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'semester')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'semester').msg %></p>
        <% } %>
      </div>
      
      <div class="md:col-span-2">
        <label class="form-label">PDF File</label>
        <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md">
          <div class="space-y-1 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
              <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4h-12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
            <div class="flex text-sm text-gray-600">
              <label for="file" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-blue-500">
                <span>Upload a file</span>
                <input id="file" name="file" type="file" class="sr-only" accept=".pdf" required>
              </label>
              <p class="pl-1">or drag and drop</p>
            </div>
            <p class="text-xs text-gray-500">
              PDF up to 10MB
            </p>
          </div>
        </div>
        <p id="file-name" class="mt-2 text-sm text-gray-500"></p>
      </div>
    </div>
    
    <div class="mt-8 flex justify-end">
      <a href="/notebank" class="btn btn-secondary mr-4">
        Cancel
      </a>
      <button type="submit" class="btn btn-primary">
        Submit for Approval
      </button>
    </div>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const fileInput = document.getElementById('file');
    const fileNameDisplay = document.getElementById('file-name');
    
    fileInput.addEventListener('change', function() {
      if (fileInput.files.length > 0) {
        fileNameDisplay.textContent = `Selected file: ${fileInput.files[0].name}`;
      } else {
        fileNameDisplay.textContent = '';
      }
    });
  });
</script>