<div class="max-w-md  bg-white rounded-lg shadow-md overflow-hidden mt-8 mb-8 mx-auto">
  <div class="p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Login to Your Account</h2>
    
    <form action="/auth/login" method="POST" data-validate="true">
      <div class="mb-4">
        <label for="email" class="form-label">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="form-input p-3 border"
          placeholder="example@example.com"
          value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'email')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'email').msg %></p>
        <% } %>
      </div>
      
      <div class="mb-6">
        <label for="password" class="form-label">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="form-input p-3 border"
          placeholder="Password"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'password')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'password').msg %></p>
        <% } %>
      </div>
      
      <button type="submit" class="btn btn-primary w-full">
        Login
      </button>
    </form>
    
    <p class="mt-4 text-center text-gray-600">
      Don't have an account? <a href="/auth/register" class="text-blue-600 hover:underline">Register here</a>
    </p>
  </div>
</div>