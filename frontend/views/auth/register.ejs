<div class="max-w-md mx-auto bg-white rounded-lg shadow-md overflow-hidden mt-8 mb-8">
  <div class="p-6">
    <h2 class="text-2xl font-bold mb-6 text-center">Create an Account</h2>
    
    <form action="/auth/register" method="POST" data-validate="true">
      <div class="mb-4">
        <label for="name" class="form-label">Full Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          class="form-input p-3 border" 
          placeholder="Enter your full name"
          value="<%= typeof formData !== 'undefined' ? formData.name : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'name')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'name').msg %></p>
        <% } %>
      </div>
      
      <div class="mb-4">
        <label for="email" class="form-label">Email Address</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          class="form-input p-3 border" 
          placeholder="Enter your email address"
          value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'email')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'email').msg %></p>
        <% } %>
      </div>
      
      <div class="mb-4">
        <label for="phone" class="form-label">Phone Number (Optional)</label>
        <input 
          type="tel" 
          id="phone" 
          name="phone" 
          class="form-input p-3 border"
          placeholder="Enter your phone number"
          value="<%= typeof formData !== 'undefined' ? formData.phone : '' %>"
        >
      </div>
      
      <div class="mb-4">
        <label for="password" class="form-label">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          class="form-input p-3 border"
          placeholder="Enter your password"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'password')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'password').msg %></p>
        <% } %>
      </div>
      
      <div class="mb-6">
        <label for="password2" class="form-label">Confirm Password</label>
        <input 
          type="password" 
          id="password2" 
          name="password2" 
          class="form-input p-3 border"
          placeholder="Confirm your password"
          required
        >
        <% if(typeof errors !== 'undefined' && errors.find(error => error.param === 'password2')) { %>
          <p class="form-error"><%= errors.find(error => error.param === 'password2').msg %></p>
        <% } %>
      </div>
      
      <button type="submit" class="btn btn-primary w-full">
        Register
      </button>
    </form>
    
    <p class="mt-4 text-center text-gray-600">
      Already have an account? <a href="/auth/login" class="text-blue-600 hover:underline">Login here</a>
    </p>
  </div>
</div>